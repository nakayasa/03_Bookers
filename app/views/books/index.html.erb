<div class="index">
  <h1 class="index_top">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data_confirm" => "本当に削除しますか？" %></td>
   </tr>
  <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
   <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="create">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="create">
   <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="create">
    <br><h4><%= f.submit 'Create Book' %></h4>
  </div>
<% end %>

</div>